<%- include('partials/head', { title: '祈禱牆', description: '教會祈禱牆 - 一同代禱，彼此守望' }) %>
<%- include('partials/header', { heroSubtitle: '一同代禱，彼此守望' }) %>
<%- include('partials/nav', { title: '祈禱牆', admin: admin }) %>

<main class="main">
  <% if (prayers.length === 0) { %>
    <div class="empty-state fade-up">
      <div class="empty-icon">&#x271D;</div>
      <p class="empty-text">暫時未有代禱事項</p>
      <a href="/submit" class="btn btn-gold">提交代禱</a>
    </div>
  <% } else { %>
    <div class="prayers-grid">
      <% prayers.forEach(function(prayer) { %>
        <article class="card prayer-card">
          <div class="card-header">
            <span class="card-name">
              <% if (prayer.display_name) { %>
                <%= prayer.display_name %>
              <% } else { %>
                <span class="card-name-anon">匿名</span>
              <% } %>
            </span>
            <span class="card-meta"><%= new Date(prayer.created_at).toLocaleDateString('zh-HK') %></span>
          </div>
          <div class="card-content"><%= prayer.content %></div>
        </article>
      <% }); %>
    </div>
  <% } %>
</main>

<%- include('partials/footer') %>
